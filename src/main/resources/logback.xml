<configuration debug="true">
    <appender name="ERROR_LOG" class="ch.qos.logback.core.FileAppender">
        <file>/var/akashic-storage/log/error.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5r %d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5le %lo{36} [%file:%line] - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="ADMIN_LOG" class="ch.qos.logback.core.FileAppender">
        <file>/var/akashic-storage/log/admin.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5r %d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5le %lo{36} [%file:%line] - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="ALL_LOG" class="ch.qos.logback.core.FileAppender">
        <file>/var/akashic-storage/log/all.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5r %d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5le %lo{36} [%file:%line] - %msg %n</pattern>
        </encoder>
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <Target>System.out</Target>
        <encoder>
            <pattern>%-5r %d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5le %lo{36} [%file:%line] - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="akashic.storage.admin" level="INFO">
        <appender-ref ref="ADMIN_LOG"/>
    </logger>
    <root level="DEBUG">
        <appender-ref ref="ALL_LOG"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
